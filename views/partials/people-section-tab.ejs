<% if (errorMessage) { %>
    <div class="error-message"><%= errorMessage %></div>
<% } else if (!peopleData || Object.keys(peopleData).length === 0) { %>
    <div class="error-message">No Records found.</div>
<% } else { 
    const departmentIcons = {
        'Finance': 'ðŸ’°',
        'Operations': 'âš™ï¸',
        'Sales & Marketing': 'ðŸ’¼',
        'Leadership': 'ðŸ‘”',
        'Other': 'ðŸ“' // Default icon for unknown departments
    };
    Object.entries(peopleData).forEach(([department, people]) => { 
%>
<div class="department-section">
    <div class="department-header">
        <h3><%= departmentIcons[department] || departmentIcons['Other'] %> <%= department %></h3>
    </div>
    <div class="people-grid">
        <% people.forEach((person, idx) => { %>
            <div class="person-card">
                <div class="person-header">
                    <div class="person-avatar">
                        <%= person.name.split(' ').map(n => n[0]).join('').toUpperCase() %>
                    </div>
                    <div class="person-info">
                        <h4><%= person.name %></h4>
                        <p class="role"><%= person.role %></p>
                    </div>
                </div>
                <div class="person-details">
                    <%= person.short_desc %>
                </div>
                <button class="view-details-btn" onclick="showPersonDetails('<%= department %>-<%= idx %>')">View Details</button>
            </div>
        <% }) %>
    </div>
</div>
<% }) } %>
<!-- Person Details Modal -->
<div class="modal" id="personModal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalPersonName">Person Details</h2>
            <button class="close-modal" onclick="closeModal()">Ã—</button>
        </div>
        <div id="modalPersonContent">
            <!-- Content will be dynamically inserted -->
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
     // Close modal on click outside
        document.getElementById('personModal').addEventListener('click', (e) => {
            if (e.target.id === 'personModal') {
                closeModal();
            }
        });
    });  
    // Show person details modal
    const peopleData = <%- JSON.stringify(peopleData) %>;

    function showPersonDetails(personId) {
        const [department, idx] = personId.split('-');
        const person = peopleData[department]?.[idx];
        if (!person) return;

        const modal = document.getElementById('personModal');
        const nameEl = document.getElementById('modalPersonName');
        const contentEl = document.getElementById('modalPersonContent');

        nameEl.textContent = person.name;
        
        contentEl.innerHTML = `
            <div style="margin-bottom: 1.5rem;">
               ${
                    (person.role && person.role.trim() !== "") || (person.department && person.department.trim() !== "")
                    ? `<p style="color: #64748b; margin-bottom: 0.5rem;">
                            ${person.role && person.role.trim() !== "" ? person.role : ""}
                            ${(person.role && person.department) ? " â€¢ " : ""}
                            ${person.department && person.department.trim() !== "" ? person.department : ""}
                    </p>`
                    : ""
                }
                ${
                    person.startDate && person.startDate.trim() !== ""
                    ? `<p style="color: #64748b;">Started: ${person.startDate}</p>`
                    : ""
                }
                ${
                    (!person.role && !person.department && !person.startDate)
                    ? `<p style="color:#9ca3af;">No role, department, or start date added</p>`
                    : ""
                }
            </div>
            
            <div style="margin-bottom: 1.5rem;">
                <h3 style="font-size: 1.125rem; color: #1e293b; margin-bottom: 0.75rem;">Contact Information</h3>
                ${
                (person.email && person.email.trim() !== "") || (person.phone && person.phone.trim() !== "")
                ? `
                    ${person.email && person.email.trim() !== "" ? `<p style="margin-bottom: 0.5rem;">ðŸ“§ ${person.email}</p>` : ""}
                    ${person.phone && person.phone.trim() !== "" ? `<p>ðŸ“± ${person.phone.replace(/`/g, "").trim()}</p>` : ""}
                `
                : `<p style="color:#9ca3af;">No contact information added</p>`
            }
            </div>
            <div style="margin-bottom: 1.5rem;">
                <h3 style="font-size: 1.125rem; color: #1e293b; margin-bottom: 0.75rem;">Key Responsibilities</h3>
                ${
                    person.responsibilities && person.responsibilities.trim() !== ""
                    ? `<ul style="margin-left: 1.5rem; color: #475569;">
                            ${person.responsibilities
                                .split(",")
                                .map(r => r.trim())
                                .filter(r => r.length > 0) // removes empty entries
                                .map(r => `<li style="margin-bottom: 0.5rem;">${r}</li>`)
                                .join("")}
                    </ul>`
                    : `<p style="color:#9ca3af;">No responsibilities added</p>`
                }
            </div>
            <div>
                <h3 style="font-size: 1.125rem; color: #1e293b; margin-bottom: 0.75rem;">Skills & Expertise</h3>
                <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                     ${
                        person.skills && person.skills.trim() !== ""
                        ? person.skills
                            .split(",")
                            .map(skill => skill.trim())
                            .filter(skill => skill.length > 0) // remove empty / trailing
                            .map(skill => `
                                <span style="background: #e2e8f0; color: #475569; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.875rem;">
                                    ${skill}
                                </span>
                            `)
                            .join("")
                        : `<p style="color:#9ca3af;">No skills added</p>`
                    }
                </div>
            </div>
        `;

        modal.classList.add('active');
    }

    // Close modal
    function closeModal() {
        document.getElementById('personModal').classList.remove('active');
    }      
</script>